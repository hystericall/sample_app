<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("create_micropost") %>
  </div>
  <%= f.submit t(".submit"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.img_type %>
  </span>
<% end %>
<%= javascript_include_tag "picture_size" %>
